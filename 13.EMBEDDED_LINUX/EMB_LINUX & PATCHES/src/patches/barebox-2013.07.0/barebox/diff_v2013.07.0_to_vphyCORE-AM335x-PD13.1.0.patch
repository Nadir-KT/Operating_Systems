+
+int elm_decode_bch_error(struct device_d *dev, char *ecc_calc,
+							unsigned int *err_loc)
+{
+	u8 ecc_data[28] = {0};
+	u32 reg;
+	int i, err_no;
+	struct elm_info *info = dev->priv;
