+	rotate_ecc_bytes(ecc_calc, ecc_data);
+	elm_load_syndrome(info, ecc_data);
+	elm_start_processing(info);
+
+	while ((readl(info->elm_base + ELM_IRQSTATUS) & (0x1 << 0)) != 0x1)
